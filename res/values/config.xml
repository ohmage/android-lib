<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
         List of default servers to be used with this build. Information about the server
         Can be included in parenthesis after the server name. The server name here is used
         to set the server url. If you have a configuration for a specific server, put
         it in /res/raw/config.yaml
    -->
    <string-array name="servers">
        <item>https://play.ohmage.org/ (Public)</item>
        <item>https://pilots.mobilizelabs.org/</item>
        <item>https://lausd.mobilizingcs.org/</item>
    </string-array>

    <!--
         If false, the user will not be able to change the server and the first
         server in the server list will be used.
    -->
    <item name="allow_custom_server" type="bool">true</item>

    <!-- If false, the user will not be able to see the register link. -->
    <item name="allow_user_registration" type="bool">true</item>

    <!--
         Default option for single campaign mode. This can be changed by the user
         in the admin settings.
    -->
    <item name="single_campaign_mode" type="bool">false</item>

    <!--
         If false, the user needs to enter the correct pin number to access the
         admin settings.
    -->
    <item name="admin_mode" type="bool">true</item>

    <!--
         If false, the user needs to enter the correct pin number to access the
         admin options for reminders.
    -->
    <item name="reminder_admin_mode" type="bool">true</item>

    <!-- If true, analaytics interactions will be logged to systemlog -->
    <item name="log_analytics" type="bool">false</item>

    <!-- Determines the log level to be logged to systemlog -->
    <item name="log_level" type="string">none</item>

    <!-- Show mobility by default -->
    <item name="show_mobility" type="bool">true</item>

    <!-- Show probes on dashboard by default -->
    <item name="show_streams" type="bool">true</item>

    <!-- Upload probes over wifi only by default -->
    <item name="upload_probes_wifi" type="bool">true</item>

</resources>