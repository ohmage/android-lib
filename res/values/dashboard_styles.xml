<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    ======================================================
    === declarative styles
    ======================================================
    -->
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_size_xlarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TitleBarLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/abs__action_bar_default_height</item>
        <item name="android:clickable">true</item>
    </style>

    <!--
    ======================================================
    === string descriptions of buttons, etc.
    ======================================================
    -->
    <string name="description_logo">ohmage</string>

</resources>