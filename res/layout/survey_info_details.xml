<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/gutter">

		<!--an optional error message -->
		<TextView style="@style/ErrorBox"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/survey_info_errorbox"
			android:text="@string/survey_info_error_test" />

		<!-- the description block -->
		<TextView style="@style/InfoDescription"
			android:id="@+id/survey_info_desc"
			android:text="@string/survey_info_description_test" />

		<!-- collapsible(?) sections with attribute info -->
		<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:shrinkColumns="2" >
		    <TableRow style="@style/InfoSectionHeader"
				android:id="@+id/survey_info_campaign_urn_row"
				android:contentDescription="@string/survey_info_campaign_urn_header_description">
				<TextView style="@style/InfoSectionLabel" android:text="@string/survey_info_campaign_urn_title" />
				<View style="@style/InfoSectionDivider" />
				<TextView style="@style/InfoSectionValue" android:id="@+id/survey_info_campaign_urn_value" />
			</TableRow>
			<TextView style="@style/InfoSectionDetails"
				android:id="@+id/survey_info_campaign_urn_details" />

			<TableRow style="@style/InfoSectionHeader"
				android:id="@+id/survey_info_status_row"
				android:contentDescription="@string/survey_info_status_header_description">
				<TextView style="@style/InfoSectionLabel" android:text="@string/survey_info_status_title" />
				<View style="@style/InfoSectionDivider" />

				<TextView style="@style/InfoSectionValue" android:id="@+id/survey_info_status_value" />
			</TableRow>
			<TextView style="@style/InfoSectionDetails"
				android:id="@+id/survey_info_status_details" />
			
			<TableRow style="@style/InfoSectionHeader"
				android:id="@+id/survey_info_responses_row"
				android:contentDescription="@string/survey_info_responses_header_description">
				<TextView style="@style/InfoSectionLabel" android:text="@string/survey_info_responses_title" />
				<View style="@style/InfoSectionDivider" />

				<TextView style="@style/InfoSectionValue" android:id="@+id/survey_info_responses_value" />
			</TableRow>
			<TextView style="@style/InfoSectionDetails"
				android:id="@+id/survey_info_responses_details" />

			<TableRow style="@style/InfoSectionHeader"
				android:id="@+id/survey_info_last_response_row"
				android:contentDescription="@string/survey_info_last_response_header_description">
				<TextView style="@style/InfoSectionLabel" android:text="@string/survey_info_last_response_title" />
				<View style="@style/InfoSectionDivider" />

				<TextView style="@style/InfoSectionValue" android:id="@+id/survey_info_last_response_value" />
			</TableRow>
			<TextView style="@style/InfoSectionDetails"
				android:id="@+id/survey_info_last_response_details" />
			
			<TableRow style="@style/InfoSectionHeader"
				android:id="@+id/survey_info_triggers_row"
				android:contentDescription="@string/survey_info_reminders_header_description">
				<TextView style="@style/InfoSectionLabel" android:text="@string/survey_info_triggers_title" />
				<View style="@style/InfoSectionDivider" />

				<TextView style="@style/InfoSectionValue" android:id="@+id/survey_info_triggers_value" />
			</TableRow>
			<TextView style="@style/InfoSectionDetails"
				android:id="@+id/survey_info_triggers_details" />
		</TableLayout>
	</LinearLayout>
</ScrollView>